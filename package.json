{
  "name": "initia-monorepo",
  "description": "Initia React.js TypeScript Frontend Monorepo",
  "version": "0.1.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:user": "pnpm --filter @initia/user-app dev",
    "dev:admin": "pnpm --filter @initia/admin-app dev",
    "dev": "pnpm --filter @initia/user-app --filter @initia/admin-app --parallel dev",
    "build:user": "pnpm --filter @initia/user-app build",
    "build:admin": "pnpm --filter @initia/admin-app build",
    "build": "pnpm --filter @initia/user-app --filter @initia/admin-app --parallel build",
    "prepare": "husky install",
    "commit": "cz",
    "lint": "pnpm --filter \"@initia/*\" --parallel lint",
    "lint:fix": "pnpm --filter \"@initia/*\" --parallel lint:fix",
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"packages/**/src/**/*.{ts,tsx,json,css,scss,md}\"",
    "typecheck": "pnpm --filter \"@initia/*\" --parallel typecheck",
    "validate": "pnpm lint && pnpm format:check && pnpm typecheck"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@react-google-maps/api": "^2.20.7",
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "formik": "^2.4.9",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "moment": "^2.30.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-i18next": "^16.4.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.10.1",
    "react-router-dom": "^7.10.1",
    "react-select": "^5.10.2",
    "redux": "^5.0.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bootstrap": "^5.2.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "commitizen": "^4.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "i18next-parser": "^9.3.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "sass": "^1.97.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}